#defining circle_area
def circle_area(radius):
    return(radius**2*pi)
    
#printing circle area by calling function
print(circle_area(2))

#conversion from euros to us dollars
def euros_to_dollars(euros):
    return(euros*1.12)

#translation of "welcome" from english to french
def welcome():
    return("bienvenue")
    
#conversion of kilometers to miles
def kilometers_to_miles(kilometers):
    return(kilometers*0.62)
    
#conversion of metric fuel efficiency to imperial (aka mpg)
def mpg_from_metric(kilometers, liters):
    gallons=liters*0.26
    miles=kilometers*0.62
    return(miles/gallons)

#conversion of european shoe size to american shoe size
def european_shoe_to_american(european):
    return(european-30.5)

#conversion of liters to gallons
def liters_to_gallons(liters):
    return(liters*0.26)

#another conversion of metric fuel efficiency to imperial (aka mpg)
def mpg_from_metric_2(kilometers, liters):
    return(kilometers_to_miles(kilometers)/liters_to_gallons(liters))

#conversion of pounds to dollars
#because the british are too cool for the euro
def pounds_to_dollars(pounds):
    return(pounds*1.55)
    

    
    

    


    
    
    

    

    
    
   
    
